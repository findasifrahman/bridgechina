{
  "name": "bridgechina-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm --filter @bridgechina/api dev\" \"pnpm --filter @bridgechina/web dev\"",
    "build": "pnpm --recursive --filter '@bridgechina/api' --filter '@bridgechina/web' build",
    "lint": "pnpm --recursive lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,vue,json,md}\"",
    "db:generate": "pnpm --filter @bridgechina/api db:generate",
    "db:migrate": "pnpm --filter @bridgechina/api db:migrate",
    "db:seed": "pnpm --filter @bridgechina/api db:seed",
    "db:studio": "pnpm --filter @bridgechina/api db:studio"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
